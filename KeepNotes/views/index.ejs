<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-800 " type="text" placeholder="Title goes here" name="title">
                <textarea class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-800 resize-none mt-2" placeholder="Write your task details here" name="description"></textarea>
                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="Create Task">
            </form>
        </div>
        <div class="tasks flex gap-3 p-10">
            <% if(files.length>0){ %>
                <% files.forEach((val)=>{ %>
                    <div class="task w-72 px-4 py-5 bg-zinc-800 rounded-xl shadow-sm">
                        <h1 class="text-white text-xl font-semibold truncate"><%= val %></h1>

                        <div class="flex justify-between items-start mt-3">

                            <a class="text-blue-400  hover:text-blue-300 transition" href="/file/<%= val %>">
                                Read More
                            </a>

                            <div class="flex flex-col gap-0 text-right">
                                <a class="text-zinc-400 hover:text-white transition" href="/edit/<%= val %>">
                                    Edit filename
                                </a>
                                <a class="text-red-500 hover:text-red-400 transition " href="/delete/<%= val %>">
                                    Delete file
                                </a>
                            </div>

                        </div>
                    </div>
                <% }) %>
            <% }else{ %>
                <h3 class="text-zinc-600">No tasks yet</h3>
            <% } %>        
        </div>
    </div>
</body>
</html>